<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:id="@+id/tname"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="#030303"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombre"
            android:inputType="text"
            android:hint="@string/identify"
            android:layout_below="@+id/tname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type"
            android:id="@+id/ttype"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="#030303"
            android:layout_below="@id/nombre"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ttype"
            android:layout_toRightOf="@id/ttype"
            android:id="@+id/spinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adress"
            android:id="@+id/tadress"
            android:textSize="20sp"
            android:textColor="#030303"
            android:layout_below="@id/ttype"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:hint="@string/dirad"
            android:layout_below="@id/tadress"
            android:id="@+id/direccion" />


    </RelativeLayout>
</ScrollView>